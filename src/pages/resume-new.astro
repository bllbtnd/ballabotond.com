---
// Resume page for Balla Botond's Astro site
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const skills = {
  programming: ['Java', 'Python', 'C++', 'C#', 'Kotlin', 'Go', 'JavaScript'],
  frameworks: ['React', 'Node.js', 'Express.js', 'Spring Boot', 'Next.js', 'Bootstrap', 'ASP.NET'],
  tools: ['Git', 'Docker', 'Linux', 'Bash', 'MySQL', 'MongoDB', 'PostgreSQL', 'SQLite']
};

const grades = [
  { subject: t('resume.education.subjects.math'), score: '94%' },
  { subject: t('resume.education.subjects.english'), score: '88%' },
  { subject: t('resume.education.subjects.literature'), score: '83%' },
  { subject: t('resume.education.subjects.history'), score: '80%' },
  { subject: t('resume.education.subjects.cs_basic'), score: '80%' },
  { subject: t('resume.education.subjects.cs_advanced'), score: '78%' }
];

const hobbies = [
  { icon: 'fas fa-chess-knight', text: t('resume.hobbies.fencing') },
  { icon: 'fas fa-music', text: t('resume.hobbies.clarinet') },
  { icon: 'fas fa-seedling', text: t('resume.hobbies.growth') },
  { icon: 'fas fa-dumbbell', text: t('resume.hobbies.gym') },
  { icon: 'fas fa-glass-whiskey', text: t('resume.hobbies.whisky') },
  { icon: 'fas fa-smoking', text: t('resume.hobbies.cigar') },
  { icon: 'fas fa-campground', text: t('resume.hobbies.camping') },
  { icon: 'fas fa-fish', text: t('resume.hobbies.fishing') }
];
---

<Layout title={t('resume.title')}>
  <!-- Navigation -->
  <nav class="fixed top-6 right-6 z-50">
    <a href={translatePath('/')} 
       class="group flex items-center gap-3 px-6 py-3 rounded-full bg-gray-900 bg-opacity-80 backdrop-blur-sm border border-luxury-gold hover:bg-luxury-gold hover:border-luxury-gold text-luxury-gold hover:text-gray-900 transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl"
       aria-label="Go to Home">
      <i class="fas fa-home text-lg group-hover:scale-110 transition-transform duration-300"></i>
      <span class="font-montserrat font-medium text-sm uppercase tracking-wider">{t('nav.home')}</span>
    </a>
  </nav>

  <!-- Main container -->
  <div class="relative min-h-screen flex flex-col" style="background: linear-gradient(135deg, #0b0b0f 0%, #1a1a20 50%, #0b0b0f 100%);">
    
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 20% 20%, rgba(201, 169, 107, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(201, 169, 107, 0.08) 0%, transparent 50%);"></div>
    
    <!-- Content container -->
    <div class="relative z-10 flex-1 py-20">
      <div class="max-w-5xl mx-auto px-6">
      
      <!-- Header section -->
      <header class="text-center mb-16">
        <!-- Brand Monogram -->
        <div class="flex items-center justify-center mb-8 animate-fade-in">
          <span class="font-playfair text-4xl md:text-6xl font-light text-luxury-gold drop-shadow-2xl">B</span>
          <div class="mx-4 flex flex-col items-center">
            <div class="w-px h-8 bg-luxury-gold opacity-60"></div>
          </div>
          <span class="font-playfair text-4xl md:text-6xl font-light text-luxury-gold drop-shadow-2xl">B</span>
        </div>
        
        <p class="font-montserrat text-sm uppercase tracking-widest text-luxury-gold mb-6 animate-fade-in" style="animation-delay: 0.3s;">
          {t('resume.tagline')}
        </p>
        
        <h1 class="font-playfair text-4xl md:text-6xl font-medium mb-4 text-white leading-tight animate-fade-in" style="animation-delay: 0.6s;">
          {t('resume.subtitle')}
        </h1>
      </header>

      <!-- Resume content -->
      <div class="space-y-12">
        
        <!-- Profile Section -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 0.9s;">
          <div class="flex flex-col lg:flex-row items-center gap-8">
            <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-luxury-gold shadow-lg flex-shrink-0">
              <img src="/assets/images/image.png" alt="Balla Botond Profile Picture" class="w-full h-full object-cover">
            </div>
            <div class="flex-1 text-center lg:text-left">
              <h2 class="font-playfair text-3xl md:text-4xl font-medium text-white mb-2">{t('common.name')}</h2>
              <p class="font-montserrat text-lg text-luxury-gold mb-4">{t('resume.position')}</p>
              <div class="flex flex-col sm:flex-row gap-4 text-sm">
                <a href="mailto:ballabotond@ballabotond.com" class="flex items-center justify-center lg:justify-start gap-2 text-luxury-gray hover:text-luxury-gold transition-colors">
                  <i class="fas fa-envelope"></i>
                  ballabotond@ballabotond.com
                </a>
                <a href="https://www.ballabotond.com" target="_blank" class="flex items-center justify-center lg:justify-start gap-2 text-luxury-gray hover:text-luxury-gold transition-colors">
                  <i class="fas fa-globe"></i>
                  www.ballabotond.com
                </a>
                <a href="https://github.com/bllbtnd" target="_blank" class="flex items-center justify-center lg:justify-start gap-2 text-luxury-gray hover:text-luxury-gold transition-colors">
                  <i class="fab fa-github"></i>
                  github.com/bllbtnd
                </a>
              </div>
            </div>
          </div>
        </section>

        <!-- Professional Summary -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 1.2s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.summary.title')}</h3>
          <p class="font-montserrat text-luxury-gray leading-relaxed">
            {t('resume.summary.text')}
          </p>
        </section>

        <!-- Technical Skills -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 1.5s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.skills.title')}</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h4 class="font-montserrat font-semibold text-white mb-4">{t('resume.skills.programming')}</h4>
              <div class="flex flex-wrap gap-2">
                {skills.programming.map(skill => (
                  <span class="px-3 py-1 bg-luxury-gold bg-opacity-20 text-luxury-gold rounded-full text-sm font-montserrat">{skill}</span>
                ))}
              </div>
            </div>
            <div>
              <h4 class="font-montserrat font-semibold text-white mb-4">{t('resume.skills.frameworks')}</h4>
              <div class="flex flex-wrap gap-2">
                {skills.frameworks.map(skill => (
                  <span class="px-3 py-1 bg-luxury-gold bg-opacity-20 text-luxury-gold rounded-full text-sm font-montserrat">{skill}</span>
                ))}
              </div>
            </div>
            <div>
              <h4 class="font-montserrat font-semibold text-white mb-4">{t('resume.skills.tools')}</h4>
              <div class="flex flex-wrap gap-2">
                {skills.tools.map(skill => (
                  <span class="px-3 py-1 bg-luxury-gold bg-opacity-20 text-luxury-gold rounded-full text-sm font-montserrat">{skill}</span>
                ))}
              </div>
            </div>
          </div>
        </section>

        <!-- Professional Experience -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 1.8s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.experience.title')}</h3>
          
          <div class="space-y-8">
            <!-- Current Job -->
            <div class="border-l-4 border-luxury-gold pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.experience.current')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.experience.current.period')}</span>
              </div>
              <a href="https://logicloud.hu" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.experience.current.company')}</a>
              <ul class="font-montserrat text-luxury-gray text-sm mt-3 space-y-1">
                <li>• {t('resume.experience.current.desc1')}</li>
                <li>• {t('resume.experience.current.desc2')}</li>
                <li>• {t('resume.experience.current.desc3')}</li>
              </ul>
            </div>

            <!-- Internship -->
            <div class="border-l-4 border-gray-600 pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.experience.intern')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.experience.intern.period')}</span>
              </div>
              <a href="https://logicloud.hu" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.experience.intern.company')}</a>
              <ul class="font-montserrat text-luxury-gray text-sm mt-3 space-y-1">
                <li>• {t('resume.experience.intern.desc1')}</li>
                <li>• {t('resume.experience.intern.desc2')}</li>
                <li>• {t('resume.experience.intern.desc3')}</li>
              </ul>
            </div>

            <!-- Wolt Job -->
            <div class="border-l-4 border-gray-600 pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.experience.wolt')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.experience.wolt.period')}</span>
              </div>
              <a href="https://wolt.com" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.experience.wolt.company')}</a>
              <ul class="font-montserrat text-luxury-gray text-sm mt-3 space-y-1">
                <li>• {t('resume.experience.wolt.desc1')}</li>
                <li>• {t('resume.experience.wolt.desc2')}</li>
                <li>• {t('resume.experience.wolt.desc3')}</li>
              </ul>
            </div>

            <!-- Hotel Job -->
            <div class="border-l-4 border-gray-600 pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.experience.hotel')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.experience.hotel.period')}</span>
              </div>
              <a href="https://www.hotelpiroska.hu" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.experience.hotel.company')}</a>
              <ul class="font-montserrat text-luxury-gray text-sm mt-3 space-y-1">
                <li>• {t('resume.experience.hotel.desc1')}</li>
                <li>• {t('resume.experience.hotel.desc2')}</li>
                <li>• {t('resume.experience.hotel.desc3')}</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- Education -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 2.1s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.education.title')}</h3>
          
          <div class="space-y-8">
            <!-- University -->
            <div class="border-l-4 border-luxury-gold pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.education.university')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.education.university.period')}</span>
              </div>
              <a href="https://pte.hu" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.education.university.school')}</a>
              <ul class="font-montserrat text-luxury-gray text-sm mt-3 space-y-1">
                <li>• {t('resume.education.university.desc1')}</li>
                <li>• {t('resume.education.university.desc2')}</li>
              </ul>
            </div>

            <!-- High School -->
            <div class="border-l-4 border-gray-600 pl-6">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                <h4 class="font-montserrat font-semibold text-white text-lg">{t('resume.education.highschool')}</h4>
                <span class="font-montserrat text-luxury-gray text-sm">{t('resume.education.highschool.period')}</span>
              </div>
              <a href="https://szent-erzsebet.hu/" target="_blank" class="font-montserrat text-luxury-gold hover:text-luxury-gold-light transition-colors">{t('resume.education.highschool.school')}</a>
              <p class="font-montserrat text-luxury-gray text-sm mt-3 mb-4">{t('resume.education.highschool.desc')}</p>
              
              <!-- Grades -->
              <div class="bg-gray-900 bg-opacity-50 rounded-lg p-4">
                <h5 class="font-montserrat font-semibold text-luxury-gold mb-3 text-sm">{t('resume.education.grades')}</h5>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                  {grades.map(grade => (
                    <div class="flex justify-between items-center bg-gray-800 bg-opacity-50 rounded px-3 py-2">
                      <span class="font-montserrat text-white text-sm">{grade.subject}</span>
                      <span class="font-montserrat font-semibold text-luxury-gold">{grade.score}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Languages -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 2.4s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.languages.title')}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex justify-between items-center bg-gray-900 bg-opacity-50 rounded-lg p-4">
              <span class="font-montserrat text-white font-semibold">{t('resume.languages.hungarian')}</span>
              <span class="font-montserrat text-luxury-gold">{t('resume.languages.hungarian.level')}</span>
            </div>
            <div class="flex justify-between items-center bg-gray-900 bg-opacity-50 rounded-lg p-4">
              <span class="font-montserrat text-white font-semibold">{t('resume.languages.english')}</span>
              <span class="font-montserrat text-luxury-gold">{t('resume.languages.english.level')}</span>
            </div>
          </div>
        </section>

        <!-- Hobbies & Interests -->
        <section class="bg-gray-800 bg-opacity-50 backdrop-blur-sm rounded-2xl p-8 border border-gray-700 animate-fade-in" style="animation-delay: 2.7s;">
          <h3 class="font-playfair text-2xl font-medium text-luxury-gold mb-6 border-b border-luxury-gold pb-2">{t('resume.hobbies.title')}</h3>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {hobbies.map(hobby => (
              <div class="flex flex-col items-center text-center p-4 bg-gray-900 bg-opacity-50 rounded-lg hover:bg-opacity-70 transition-all">
                <i class={`${hobby.icon} text-2xl text-luxury-gold mb-2`}></i>
                <span class="font-montserrat text-white text-sm">{hobby.text}</span>
              </div>
            ))}
          </div>
        </section>
      </div>
      </div>
    </div>
    
    <!-- Footer Component -->
    <Footer variant="full" />
  </div>
</Layout>
