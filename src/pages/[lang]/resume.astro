---
// Resume page for Balla Botond's Astro site
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations, useTranslatedPath, languages } from '../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages)
    .filter(lang => lang !== 'en') // Exclude English since we have a static /resume.astro
    .map(lang => ({
      params: { lang }
    }));
}

const { lang } = Astro.params;
const typedLang = lang as keyof typeof languages;
const t = useTranslations(typedLang);
const translatePath = useTranslatedPath(typedLang);
const siteOrigin = Astro.site ?? 'https://ballabotond.com';
const pageUrl = new URL(Astro.url.pathname, siteOrigin).toString();
const heroImage = `${siteOrigin}/assets/images/resume-og.png`;

const getAbsoluteUrl = (path: string) => new URL(path, siteOrigin).toString();

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  '@id': `${pageUrl}#breadcrumb`,
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: t('nav.home'),
      item: getAbsoluteUrl(translatePath('/'))
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: t('resume.subtitle'),
      item: pageUrl
    }
  ]
};

const webPageSchema = {
  '@context': 'https://schema.org',
  '@type': ['WebPage', 'ProfilePage'],
  '@id': `${pageUrl}#webpage`,
  url: pageUrl,
  name: t('resume.title'),
  description: t('resume.summary.text'),
  inLanguage: typedLang,
  isPartOf: {
    '@id': `${siteOrigin}#website`
  },
  about: {
    '@id': `${siteOrigin}#person`
  },
  mainEntity: {
    '@id': `${siteOrigin}#person`
  },
  primaryImageOfPage: {
    '@type': 'ImageObject',
    '@id': `${heroImage}#primaryimage`,
    url: heroImage,
    width: 1200,
    height: 630,
    caption: t('common.name')
  },
  breadcrumb: {
    '@id': `${pageUrl}#breadcrumb`
  }
};

const structuredData = [breadcrumbSchema, webPageSchema];

const metaDescription = t('resume.summary.text');
const metaKeywords = t('home.keywords');
---

<Layout
  title={t('resume.title')}
  description={metaDescription}
  keywords={metaKeywords}
  ogImage="/assets/images/resume-og.png"
>
  <script slot="head" type="application/ld+json" is:inline>
    {JSON.stringify(structuredData)}
  </script>
  <!-- Navigation -->
  <nav class="fixed top-6 right-6 z-50">
    <a href={translatePath('/')} 
       class="group flex items-center gap-3 px-6 py-3 rounded-full bg-gray-900 bg-opacity-80 backdrop-blur-sm border border-luxury-gold hover:bg-luxury-gold hover:border-luxury-gold text-luxury-gold hover:text-gray-900 transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl"
       aria-label="Go to Home">
      <i class="fas fa-home text-lg group-hover:scale-110 transition-transform duration-300"></i>
      <span class="font-montserrat font-medium text-sm uppercase tracking-wider">{t('nav.home')}</span>
    </a>
  </nav>

  <!-- Main container -->
  <div class="relative min-h-screen flex flex-col" style="background: linear-gradient(135deg, #0b0b0f 0%, #1a1a20 50%, #0b0b0f 100%);">
    
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 20% 20%, rgba(201, 169, 107, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(201, 169, 107, 0.08) 0%, transparent 50%);"></div>
    
    <!-- Content container -->
    <div class="relative z-10 flex-1 py-20">
