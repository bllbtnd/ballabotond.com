---
// Redirect projects to default language
import { defaultLang } from '../i18n/utils';

const redirectUrl = `/${defaultLang}/projects/`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="refresh" content={`0;url=${redirectUrl}`}>
  <meta name="robots" content="noindex">
  <script is:inline>
    window.location.href = "/en/projects/";
  </script>
  <title>Redirecting...</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #0b0b0f 0%, #1a1a20 50%, #0b0b0f 100%);
      color: #c9a96b;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      overflow: hidden;
    }
    .loader {
      text-align: center;
    }
    .spinner {
      border: 3px solid rgba(201, 169, 107, 0.3);
      border-top: 3px solid #c9a96b;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    noscript p {
      text-align: center;
      padding: 20px;
    }
    noscript a {
      color: #c9a96b;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="loader">
    <div class="spinner"></div>
    <p>Redirecting...</p>
  </div>
  <noscript>
    <p>Please enable JavaScript or <a href={redirectUrl}>click here</a> to continue.</p>
  </noscript>
</body>
</html>
