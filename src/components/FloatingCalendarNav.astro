---
// Floating Calendar Navigation with Availability Status
import { getLangFromUrl, useTranslatedPath } from '../i18n/utils';
import { fetchCalendars, getAvailability } from '../utils/calendar';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const calendarUrls = import.meta.env.PUBLIC_CALENDAR_URLS?.split(',').map((url: string) => url.trim()).filter(Boolean) || [];

let isAvailable = false;
let hasCalendar = false;

if (calendarUrls.length > 0) {
  try {
    const busySlots = await fetchCalendars(calendarUrls);
    const availability = getAvailability(busySlots, 1); // Only check current week
    hasCalendar = true;
    
    // Find today's availability
    const now = new Date();
    const today = availability.find(day => {
      return day.date.getDate() === now.getDate() &&
             day.date.getMonth() === now.getMonth() &&
             day.date.getFullYear() === now.getFullYear();
    });
    
    if (today && !today.isPast && today.hourlyAvailability) {
      // Check current hour availability (6 AM to 10 PM range)
      const currentHour = now.getHours();
      if (currentHour >= 6 && currentHour <= 22) {
        const hourIndex = currentHour - 6; // Index 0 = 6 AM
        isAvailable = today.hourlyAvailability[hourIndex] === true;
      }
    }
  } catch (error) {
    console.error('Failed to fetch availability:', error);
  }
}
---

<a 
  href={translatePath('/calendar')} 
  class={`floating-calendar-nav ${hasCalendar && isAvailable ? 'available' : ''} ${hasCalendar && !isAvailable ? 'busy' : ''}`}
  aria-label="View availability calendar"
  title={hasCalendar ? (isAvailable ? 'Available - View calendar' : 'Busy - View calendar') : 'View calendar'}
>
  <i class="fas fa-calendar-alt"></i>
</a>

<style>
  .floating-calendar-nav {
    position: fixed;
    top: 1.5rem;
    right: 2rem;
    z-index: 100;
    font-size: 20px;
    color: #c9a96b;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease, color 0.3s ease;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    opacity: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    line-height: 1;
  }
  
  .floating-calendar-nav:hover {
    color: #e8c474;
    transform: scale(1.1);
  }

  .floating-calendar-nav.available {
    color: #10b981;
  }

  .floating-calendar-nav.available:hover {
    color: #34d399;
    text-shadow: 0 0 12px rgba(16, 185, 129, 0.4);
  }

  .floating-calendar-nav.busy {
    color: #ef4444;
  }

  .floating-calendar-nav.busy:hover {
    color: #f87171;
    text-shadow: 0 0 12px rgba(239, 68, 68, 0.4);
  }

  .floating-calendar-nav.scrolled-down {
    opacity: 0;
    pointer-events: none;
  }
  
  @media (max-width: 768px) {
    .floating-calendar-nav {
      top: 1.5rem;
      right: 1.5rem;
      font-size: 18px;
    }
  }
</style>

<script>
  let scrollHandler: (() => void) | null = null;

  function initFloatingCalendarNav() {
    const nav = document.querySelector('.floating-calendar-nav');
    if (!(nav instanceof HTMLElement)) return;

    // Remove old handler if exists
    if (scrollHandler) {
      window.removeEventListener('scroll', scrollHandler);
    }

    let lastScrollY = window.scrollY;
    const handleScroll = () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > 50) {
        if (currentScrollY > lastScrollY) {
          nav.classList.add('scrolled-down');
        } else {
          nav.classList.remove('scrolled-down');
        }
      } else {
        nav.classList.remove('scrolled-down');
      }

      lastScrollY = currentScrollY;
    };

    scrollHandler = () => {
      requestAnimationFrame(handleScroll);
    };

    // Run once to sync initial state
    handleScroll();

    window.addEventListener('scroll', scrollHandler, { passive: true });
  }

  document.addEventListener('DOMContentLoaded', initFloatingCalendarNav);
  document.addEventListener('astro:page-load', initFloatingCalendarNav);
</script>
