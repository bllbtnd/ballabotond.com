---
// Floating Calendar Icon with Availability Status (no link)
import { getLangFromUrl } from '../i18n/utils';
import { fetchCalendars, getAvailability } from '../utils/calendar';
import { toZonedTime } from 'date-fns-tz';
import en from '../i18n/en.json';
import hu from '../i18n/hu.json';
import it from '../i18n/it.json';
import ja from '../i18n/ja.json';
import zh from '../i18n/zh.json';

const lang = getLangFromUrl(Astro.url);

const translations: Record<string, any> = { en, hu, it, ja, zh };
const t = translations[lang] || translations.en;

const calendarUrls = import.meta.env.PUBLIC_CALENDAR_URLS?.split(',').map((url: string) => url.trim()).filter(Boolean) || [];

let isAvailable = false;
let hasCalendar = false;

if (calendarUrls.length > 0) {
  try {
    const busySlots = await fetchCalendars(calendarUrls);
    const availability = getAvailability(busySlots, 1); // Only check current week
    hasCalendar = true;
    
    // Find today's availability using Budapest timezone
    const now = new Date();
    const nowBudapest = toZonedTime(now, 'Europe/Budapest');
    const today = availability.find(day => {
      return day.date.getDate() === nowBudapest.getDate() &&
             day.date.getMonth() === nowBudapest.getMonth() &&
             day.date.getFullYear() === nowBudapest.getFullYear();
    });
    
    if (today && !today.isPast && today.hourlyAvailability) {
      const currentHour = nowBudapest.getHours();
      if (currentHour >= 6 && currentHour <= 22) {
        const hourIndex = currentHour - 6;
        isAvailable = today.hourlyAvailability[hourIndex] === true;
      }
    }
  } catch (error) {
    console.error('Failed to fetch availability:', error);
  }
}
---

<div class="calendar-nav-wrapper">
  <div 
    class={`floating-calendar-nav ${hasCalendar && isAvailable ? 'available' : ''} ${hasCalendar && !isAvailable ? 'busy' : ''}`}
    aria-label={hasCalendar ? (isAvailable ? 'Available' : 'Busy') : 'Availability status'}
    title={hasCalendar ? (isAvailable ? t.home.available : t.home.busy) : ''}
  >
    <i class="fas fa-calendar-alt"></i>
  </div>
  
  <!-- Mobile Status Indicator -->
  {hasCalendar && (
    <div class={`status-indicator ${isAvailable ? 'available' : 'busy'}`}>
      {isAvailable ? t.home.available : t.home.busy}
    </div>
  )}
</div>

<style>
  .calendar-nav-wrapper {
    position: fixed;
    top: 1.5rem;
    right: 2rem;
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
  }

  .floating-calendar-nav {
    position: relative;
    font-size: 20px;
    color: #c9a96b;
    text-decoration: none;
    transition: all 0.3s ease, color 0.3s ease;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    line-height: 1;
  }

  .floating-calendar-nav.available {
    color: #10b981;
  }

  .floating-calendar-nav.available:hover {
    color: #34d399;
    text-shadow: 0 0 12px rgba(16, 185, 129, 0.4);
  }

  .floating-calendar-nav.busy {
    color: #ef4444;
  }

  .floating-calendar-nav.busy:hover {
    color: #f87171;
    text-shadow: 0 0 12px rgba(239, 68, 68, 0.4);
  }

  .floating-calendar-nav.scrolled-down {
    opacity: 0;
    pointer-events: none;
  }

  /* Status Indicator */
  .status-indicator {
    position: absolute;
    right: 100%;
    top: 55%;
    transform: translateY(-50%);
    margin-right: 0.5rem;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    opacity: 0.7;
    white-space: nowrap;
    display: flex;
    align-items: center;
    animation: statusFadeOut 0.3s ease-in-out 4.7s forwards;
  }

  .status-indicator.available {
    color: #10b981;
  }

  .status-indicator.busy {
    color: #ef4444;
  }

  @keyframes statusFadeOut {
    from {
      opacity: 0.7;
    }
    to {
      opacity: 0;
      pointer-events: none;
    }
  }

  .calendar-nav-wrapper.scrolled-down {
    opacity: 0;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .calendar-nav-wrapper {
      top: 1.5rem;
      right: 1.5rem;
    }

    .floating-calendar-nav {
      font-size: 18px;
    }
  }
</style>

<script>
  let scrollHandler: (() => void) | null = null;

  function initFloatingCalendarNav() {
    const wrapper = document.querySelector('.calendar-nav-wrapper');
    if (!(wrapper instanceof HTMLElement)) return;

    // Remove old handler if exists
    if (scrollHandler) {
      window.removeEventListener('scroll', scrollHandler);
    }

    let lastScrollY = window.scrollY;
    const handleScroll = () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > 50) {
        if (currentScrollY > lastScrollY) {
          wrapper.classList.add('scrolled-down');
        } else {
          wrapper.classList.remove('scrolled-down');
        }
      } else {
        wrapper.classList.remove('scrolled-down');
      }

      lastScrollY = currentScrollY;
    };

    scrollHandler = () => {
      requestAnimationFrame(handleScroll);
    };

    // Run once to sync initial state
    handleScroll();

    window.addEventListener('scroll', scrollHandler, { passive: true });
  }

  document.addEventListener('DOMContentLoaded', initFloatingCalendarNav);
  document.addEventListener('astro:page-load', initFloatingCalendarNav);
</script>
